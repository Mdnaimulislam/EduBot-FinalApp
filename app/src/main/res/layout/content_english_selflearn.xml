<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".english.SelfLearnEnglish"
    >

    <TextView
        android:id="@+id/learn_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To teach me first input the question by clicking teach question button then give answer to the question by clicking the next button. "
        android:layout_marginTop="170dp"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/bangla_qlearn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Teach Question"
        android:layout_below="@id/learn_msg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:backgroundTint="#D32F2F"/>

    <Button
        android:id="@+id/bangla_alearn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Teach Answer"
        android:layout_below="@id/bangla_qlearn"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#388E3C"/>

</RelativeLayout>