<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".english.EnglishActivityResponsive"
    tools:showIn="@layout/app_bar_english_home_resposive"
    android:background="#08655A"
    >

    <Button
        android:id="@+id/Manual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Manual Mode"
        android:textAllCaps="false"
        android:textColor="#131313"
        />
    <ToggleButton
        android:id="@+id/english_talk_btn"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/style_toggle_button"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textOff="@string/start_talking"
        android:textOn="........."
        android:textAllCaps="false"/>


</RelativeLayout>